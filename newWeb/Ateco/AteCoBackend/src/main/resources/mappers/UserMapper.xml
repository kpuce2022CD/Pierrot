<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pierrot.ateco.mappers.UserMapper">
	<select id="selectUser" resultType="com.pierrot.ateco.domain.UserVO">
		select * from user where email = #{email}
	</select>
	
	<select id="signInUser" resultType="com.pierrot.ateco.domain.UserVO">
		select * from user where email = #{email} and passwd = #{passwd}
	</select>
	
	<insert id="signUpUser">
		insert into `user` (email,passwd,name,age,weight,height,team) values(#{email},#{passwd},#{name},#{age},#{weight},#{height},#{team})
	</insert>
</mapper>